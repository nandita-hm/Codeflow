<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logingradient"
    tools:context=".LoginActivity">


    <Button
        android:id="@+id/loginbtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="316dp"
        android:layout_height="42dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="297dp"
        android:background="@drawable/rounded_corners"
        android:text="Login"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="368dp"
        android:backgroundTint="#FAF9F9"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FBF5F5"
        android:textColorHint="#57F4FAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="437dp"
        android:backgroundTint="#FAF9F9"
        android:ems="10"
        android:fontFamily="@font/allerta"
        android:hint="Email ID"
        android:inputType="textPersonName"
        android:textColor="#FBF5F5"

        android:textColorHint="#57F4FAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="478dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="234dp"
        android:clickable="true"

        android:text="@string/new_user_register_here"
        android:textColor="#BDBCBC"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginvia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="189dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="170dp"
        android:text="OR"
        android:textColor="#FAF9F9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:layout_height="88dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="588dp"

        android:fadeScrollbars="true"
        android:fontFamily="@font/amiko"
        android:lineSpacingExtra="10sp"
        android:text="Hello there,\nWelcome back"
        android:textAlignment="textStart"
        android:textColor="#F7F7F8"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>